type Query {
    user: User!
    organizations:[Organization!]!
    organization(id:ID!):Organization!
    metrics(orgId:ID!,page:Int = 0,size:Int = 50):[Metric!]
    metric(metricId:ID!):Metric!
    alerters(orgId:ID!):[Alerter!]
    alerts(orgId:ID!,page:Int = 0,size:Int = 100):[Alert!]
    triggersByOrganization(orgId:ID!,page:Int = 0,size:Int = 50):[Trigger!]
    triggers(lastHours:Int = 4,page:Int = 0,size:Int = 50):[Trigger!]
    organizationAccessTokens(orgId:ID!):[AccessToken!]
}
